@model PhoneChalin.Models.Smartphone

@{
    ViewData["Title"] = "Add Data Smartphone";
    Layout = "_LayoutAdmin";
}

<h1 class="h3 mb-4 text-gray-800">Halaman Input Data Smartphone Baru</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label>Select Supplier</label>
                <select asp-for="IdSupplier" class="form-control" asp-items="ViewBag.Suppliers">
                    <option>Pilih Supplier</option>
                </select>
                <span asp-validation-for="IdSupplier" class="text-danger"></span>
                @*@Html.DropDownList("IdSupplier", ViewBag.Suppliers as SelectList, "Pilih Supplier", new { @class = "required, form-control" })*@
                @*@Html.ValidationMessageFor("IdSupplier", "")*@
            </div>
            <div class="form-group">
                <label asp-for="NameSmartphone">@Html.DisplayNameFor(model => model.NameSmartphone)</label>
                <input asp-for="NameSmartphone" type="text" class="form-control" placeholder="Name Smartphone">
                <span asp-validation-for="NameSmartphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceSmartphone">@Html.DisplayNameFor(model => model.PriceSmartphone)</label>
                <input asp-for="PriceSmartphone" type="text" class="form-control" placeholder="Price Smartphone">
                <span asp-validation-for="PriceSmartphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockSmartphoen">@Html.DisplayNameFor(model => model.StockSmartphoen)</label>
                <input asp-for="StockSmartphoen" type="text" class="form-control" placeholder="Stock Smartphone">
                <span asp-validation-for="StockSmartphoen" class="text-danger"></span>
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>


