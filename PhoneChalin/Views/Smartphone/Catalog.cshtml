@model IEnumerable<PhoneChalin.Models.Smartphone>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home";
}

<h3 class="mb-4 text-center">CATALOG SMARTPHONE</h3>

<div class="text-center">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>
<p>@Context.Session.GetString("Id")</p>
<p>@Context.Session.GetString("Username")</p>
<p>@Context.Session.GetString("Email")</p>
<p>@Context.Session.GetString("Token")</p>
<p>@Context.Session.GetString("Role")</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm mb-2">
            <div class="card text-center shadow p-3 mb-3 bg-white rounded" style="width: 18rem;">
                <div class="text-center">
                    <img class="card-img-top img-fluid" style="width:100px" src="https://5.imimg.com/data5/EL/UJ/MY/SELLER-58934779/eco-215-intex-mobile-phones-500x500.jpg" alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.NameSmartphone)</h5>
                    <p class="card-text">Rp. @string.Format("{0:C}", item.PriceSmartphone)</p>
                    <a href="#" class="btn btn-info">Buy</a>
                </div>
            </div>
        </div>
    }
</div>

