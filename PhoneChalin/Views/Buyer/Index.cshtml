@model IEnumerable<PhoneChalin.Models.Buyer>

@{
    ViewData["Title"] = "Data Buyer";
    Layout = "_LayoutAdmin";
}

<h1 class="h3 mb-4 text-gray-800">DATA BUYER</h1>

<div class="row">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary mb-2" asp-controller="Buyer">Add Data Buyer</a>
        
        <br>

        <a class="btn btn-primary" style="float:left;margin-right:5px;" href="#" target="_blank">Export : </a>
        <table class="table table-striped table-bordered dataTable" style="width: 100%;" id="buyer">
            <thead class="theadColor">
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameBuyer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/buyer.js" asp-append-version="true"></script>
}
