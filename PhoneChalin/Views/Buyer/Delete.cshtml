@model PhoneChalin.Models.Buyer

@{
    ViewData["Title"] = "Delete Data Buyer";
    Layout = "_LayoutAdmin";
}

<h1 class="h3 mb-4 text-gray-800">Delete Data Buyer @Html.DisplayFor(model => model.NameBuyer)</h1>

<div class="row">
    <div class="col">
        <div class="form-group">
            <label asp-for="NameBuyer" for="exampleInputEmail1">@Html.DisplayNameFor(model => model.NameBuyer)</label>
            <input asp-for="NameBuyer" type="text" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Gender" for="exampleInputPassword1">@Html.DisplayNameFor(model => model.Gender)</label>
            <input asp-for="Gender" type="text" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Phone" for="exampleInputPassword1">@Html.DisplayNameFor(model => model.Phone)</label>
            <input asp-for="Phone" type="text" class="form-control" readonly>
        </div>

        <a href="~/buyer/delete/@Html.DisplayFor(model => model.IdBuyer)" class="btn btn-danger">Hapus</a>
    </div>
</div>