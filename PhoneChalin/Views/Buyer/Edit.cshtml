@model PhoneChalin.Models.Buyer

@{
    ViewData["Title"] = "Edit Data Buyer";
}

<h3>Edit Data Buyer @Html.DisplayFor(model => model.NameBuyer)</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdBuyer" />
            <div class="form-group">
                <label asp-for="NameBuyer">@Html.DisplayNameFor(model => model.NameBuyer)</label>
                <input asp-for="NameBuyer" type="text" class="form-control" placeholder="Name Buyer">
                <span asp-validation-for="NameBuyer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">@Html.DisplayNameFor(model => model.Gender)</label>
                <input asp-for="Gender" type="text" class="form-control" placeholder="Gender Buyer">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">@Html.DisplayNameFor(model => model.Phone)</label>
                <input asp-for="Phone" type="text" class="form-control" placeholder="Phone Buyer">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>