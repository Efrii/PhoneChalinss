@model PhoneChalin.Models.Supplier

@{
    ViewData["Title"] = "Edit Data Supplier";
}

<h3>Edit Data Supplier @Html.DisplayFor(model => model.NameSupplier)</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="IdSupplier" />
            <div class="form-group">
                <label asp-for="BrandSupplier">@Html.DisplayNameFor(model => model.BrandSupplier)</label>
                <input asp-for="BrandSupplier" type="text" class="form-control" placeholder="Insert Name Supplier">
                <span asp-validation-for="BrandSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameSupplier">@Html.DisplayNameFor(model => model.NameSupplier)</label>
                <input asp-for="NameSupplier" type="text" class="form-control" placeholder="Phone Supplier">
                <span asp-validation-for="NameSupplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone">@Html.DisplayNameFor(model => model.Phone)</label>
                <input asp-for="Phone" type="text" class="form-control" placeholder="Address Supplier">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">@Html.DisplayNameFor(model => model.Address)</label>
                <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>