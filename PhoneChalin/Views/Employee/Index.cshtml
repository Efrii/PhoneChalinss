@model IEnumerable<PhoneChalin.Models.Employee>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Data Employee";
    Layout = "_LayoutAdmin";
}

<h1 class="h3 mb-4 text-gray-800">DATA Employee</h1>

<div class="row">
    <div class="col">

        <div class="text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        
        <a class="btn btn-primary" style="float:left;margin-right:5px;" href="#" target="_blank">Export : </a>
        <table class="table table-striped table-bordered dataTable" style="width: 100%;" id="employee">
            <thead class="theadColor">
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NipEmployee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameEmployee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GenderEmployee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AgeEmployee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusEmployer)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/employee.js" asp-append-version="true"></script>
}